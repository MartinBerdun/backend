

<h2>Details Cart ID:<span id="cartId">{{cart._id}}</span></h2>

{{#if cart.products}}
<div>    
{{#each cart.products}}
    <div class="divMayor">
        <div class="divCart">
            {{!-- <img class="imgCart" src={item.img} alt=""></img> --}}
                <div id="{{this.product._id}}" class="divCart2">
                    <p>{{this.product.title}}</p>
                    <p>Cantidad: {{this.quantity}}</p>
                    <p>$ {{this.product.price}} c/u<p>
                    <p><b>Total: $ {{this.quantity}}*{{this.product.price}}</b></p>
                    <form id="removeFromCartForm-{{this.product._id}}">
                        <button type="submit"><span>Remove</span></button>
                    </form>
                </div>
        </div>
    </div>
{{/each}}
</div>
{{/if}}
<div>
            <div class="totaldiv"><p className="total" >Total: $ {total()}</p></div>
            <div class="botones">
           {{!--  <button id="deleteAllProducts">Vaciar carrito</button> --}}
            <button id="createTicket">Terminar Compra</button>
            </div>
            </div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"
></script>

<script src="/js/cart.js" type="module"></script>