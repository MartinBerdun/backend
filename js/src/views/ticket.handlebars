  {{#if userTickets}}
    <div id="ticketsDetail">
      {{#each userTickets}}
        <div id="{{this._id}}">
          <div>
            <div>
              <h5>Order code: {{this.code}}</h5>
              <p>Purchase date:
                {{this.purchase_datetime}}</p>
              {{! ciclo 2 }}
                {{#each this.products}}
                    <p>{{this.quantity}}
                    x
                    {{this.productId.title}}
                    - $
                    {{this.productId.price}}
                    ea.</p>
                {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
{{/if}}

